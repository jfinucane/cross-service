<table>
  <tr>
     <td> Anagrams </td>
     <%- @suggestions['anagrams'].each_with_index  do |a,i| %>
        <td> <%=a%> </td>
        <%- if i%4 == 3 %>
          </tr><tr><td></td>
        <%- end %>
     <%- end %>
  </tr>

  <tr>
   <td> Shorten</td>
   <%- @suggestions['shorten'].each_with_index  do |a,i| %>
      <td> <%=a%> </td>
      <%- if i%4 == 3 %>
          </tr><tr><td></td>
      <%- end %>
   <%- end %>
  </tr>

  <tr>
   <td> Add one: </td>
  </tr>

  <tr>
   <%- @suggestions['addone'].each_pair  do |letter, words| %>
      <td> --<%= letter %>-- </td>
      <%- words.each_with_index do |w,i|  %>
        <td> <%=w%></td>
        <%- if i%4 == 3 %>
          </tr><tr><td></td>
        <%- end %>
      <%- end %> 
      </tr>
      <tr> 
   <%- end %>
  </tr>


 </table>